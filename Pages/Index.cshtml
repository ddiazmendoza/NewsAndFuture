@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
  <body>
    <div class="container-scroller">
      <div class="main-panel">
        <div class="container">
          <div class="banner-top-thumb-wrap">
            <div class="d-lg-flex justify-content-between align-items-center ">

              <div class="d-flex justify-content-between  mb-3 mb-lg-0 text-truncate">
                <div>
                                <a href="a">
                                    <img src="a"
                        alt="mainArticleImage"
                        class="banner-top-thumb "/>
                    </a>
                </div>
                <h5 class="m-0 font-weight-bold  ">title</h5>
              </div>
                            @{
                                for (int i = 0; i <= 5; i++)
                                {
                                    <div class="d-flex justify-content-between mb-3 mb-lg-0 text-truncate">
                                        <div>
                                            <a href="@Model.NewsHeadliners[i].Url">
                                            <img src="@Model.NewsHeadliners[i].UrlToImage"
                                                     alt="ArticlesRequestedElonMusk[2].UrlToImage"
                                                     class="banner-top-thumb" />
                                            </a>
                                        </div>
                                        <h5 class="m-0 font-weight-bold text-truncate ">
                                        @Model.NewsHeadliners[i].Title
                                        </h5>
                                    </div>
                                }
                            }
              

            </div>
          </div>
          <div class="row">
            <div class="col-lg-8">
              <div class="owl-carousel owl-theme" id="main-banner-carousel">

                                @{
                                    for (int i = 0; i < 5; i++)
                                    {
                                        <div class="item">
                                            <div class="carousel-content-wrapper mb-2">
                                                <div class="carousel-content">
                                                    <h1 class="font-weight-bold">
                                                        @Model.NewsHeadliners[i].Title  
                                                    </h1>
                                                    <h5 class="font-weight-normal  m-0">
                                                        @Model.NewsHeadliners[i].Description
                                                    </h5>
                                                    <p class="text-color m-0 pt-2 d-flex align-items-center">
                                                        <span class="fs-10 mr-1">@Model.NewsHeadliners[i].PublishedAt</span> @* Published at *@
                                                        <i class="mdi mdi-bookmark-outline mr-3"></i>
                                                        <span class="fs-10 mr-1">126</span>
                                                        <i class="mdi mdi-comment-outline"></i>
                                                    </p>
                                                </div>
                                                <div class="carousel-image" style="max-height: 100%;">
                                                    <img class="image-fluid" src="@Model.NewsHeadliners[i].UrlToImage" alt="an image should be here" />
                                                </div>
                                            </div>
                                        </div>

                                    }
                                }
              </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  </body>


           